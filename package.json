{
  "name": "commitkit-desktop",
  "productName": "CommitKit",
  "version": "0.1.0",
  "description": "Privacy-first CV bullet generator from git commits",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "tsc && cp src/renderer/index.html dist/renderer/ && cp src/renderer/vis-network.min.js dist/renderer/",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "evals": "evalite",
    "evals:watch": "evalite --watch",
    "evals:simple": "npx ts-node evals/run-evals.ts"
  },
  "author": "Richie Thomas",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "autoevals": "^0.0.64",
    "electron": "^33.0.0",
    "evalite": "^0.19.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0",
    "vitest": "^2.1.9"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "better-sqlite3": "^11.0.0",
    "ollama": "^0.5.0",
    "simple-git": "^3.27.0",
    "vis-data": "^8.0.3",
    "vis-network": "^10.0.2"
  }
}
